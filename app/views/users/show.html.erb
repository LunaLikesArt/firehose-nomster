<div class="booyah-box">
	<div class="booyah-box">
	  <div class="col-sm-4 hidden-xs">
	    <%= image_tag 'user2.png' %>
	  </div>

	  <div class="col-sm-8">
	    <h1><%= @user.email.split('@')[0] %></h1>
	    <br />
	    <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
	    <br />
	    <h4><%= @user.comments.count %> total comments</h4>
	    <h4><%= @user.comments.where(rating: '5_stars').count %> five &#9734  reviews</h4>
	  </div>
	  <div class="clear"></div>
	</div>

	<br /><br />
	<div class="booyah-box">
	<h2 class="text-center">My Comments</h2>
	<br /><br /><br />
	<% @user.comments.each do |comment| %>
	  <div class="col-xs-12 col-sm-6">
	  	<h2 class="text-left"><%= link_to comment.place.name, place_path(comment.place) %></h2>

	  	<blockquote>
	    	<% if comment.humanized_rating.present? %>
	      	<b><%= comment.humanized_rating %></b> -
	    	<% end %>
	    	<%= comment.message %>
	   		<small><%= comment.user.email %></small>
	  	</blockquote>
		</div>
	<% end %>
<div class="clear"></div>
	</div>

	<div class="clear"></div>
	<br /><br />
	<div class="booyah-box">
	<h2 class="text-center">My Places</h2>
	<br /><br />
	<% @user.places.each do |place| %>
	    <h2><%= link_to place.name, place_path(place) %></h2><br />
	    <i><%= place.address %></i><br />
	    <p><%= place.description %></p><br />
	<% end %>
</div>
</div>
