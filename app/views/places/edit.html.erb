<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Edit Place Details</h1>
  <br />
  <%= simple_form_for @place do |f| %>
    <%= f.input :name, label: 'Location' %>
    <br />
    <%= f.input :address %>
    <br />
    <%= f.input :description %>
    <br />
    <%= f.submit 'Save', class: "btn btn-success btn-sm" %>
  <% end %>
</div>